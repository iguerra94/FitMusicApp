<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/currentSongDetailView"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/border"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/notificationSongCover"
        android:layout_width="@dimen/dim_circle_image_view"
        android:layout_height="@dimen/dim_circle_image_view"
        android:layout_gravity="bottom"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_vertical_margin" />

    <LinearLayout
        android:id="@+id/llNewRace"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/notificationSongTitle"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="start|bottom"
            android:maxLines="1"
            android:singleLine="true"
            />

        <TextView
            android:id="@+id/notificationSongArtist"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="start|top"
            android:maxLines="1"
            android:singleLine="true"
            />

    </LinearLayout>

    <ImageButton
        android:id="@+id/notificationBtnStepBackward"
        android:layout_width="@dimen/dim_20_dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/dim_20_dp"
        android:background="@android:color/transparent"
        />

    <ImageButton
        android:id="@+id/notificationBtnPlay"
        android:layout_width="@dimen/dim_btn_play_pause"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:layout_marginEnd="@dimen/dim_20_dp"
        android:background="@android:color/transparent"
        />

    <ImageButton
        android:id="@+id/notificationBtnPause"
        android:layout_width="@dimen/dim_btn_play_pause"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:layout_marginEnd="@dimen/dim_20_dp"
        android:background="@android:color/transparent"
        android:visibility="gone"
        />

    <ImageButton
        android:id="@+id/notificationBtnStepForward"
        android:layout_width="@dimen/dim_20_dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:background="@android:color/transparent"
        />

</LinearLayout>